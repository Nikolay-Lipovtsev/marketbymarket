<!DOCTYPE html>
<html>
<head>
  <title><%= full_title(yield(:title)) %></title>

  <%= render 'layouts/description' %>

  <%= stylesheet_link_tag    "custom", media: "all" %>
  <%= stylesheet_link_tag    "static_pages", media: "all" %>
  <%= stylesheet_link_tag    "signup", media: "all" %>

  <%= javascript_include_tag "application" %>
  <%= javascript_include_tag "static_pages" %>
  <%= javascript_include_tag "signup" %>
  <%= csrf_meta_tags %>
  <%= render 'layouts/shim' %>
</head>
<body>

<div id="content">
  <%= yield %>
</div>
<div id="footer">
  <%= render 'layouts/signup_footer' %>
  <div class="container">
    <div class="row">
      <div class="col-md-12">
        <%= debug(params) if Rails.env.development? %>
      </div>
    </div>
  </div>
</div>
</body>
</html>