<!DOCTYPE html>
<html>
<head>
  <title><%= full_title(yield(:title)) %></title>

  <%= render 'layouts/description' %>

  <%= stylesheet_link_tag    "application",   media: "all" %>
  <%= stylesheet_link_tag    "custom", media: "all" %>
  <%= stylesheet_link_tag    "static_pages", media: "all" %>
  <%= stylesheet_link_tag    "signup", media: "all" %>

  <%= javascript_include_tag "application" %>
  <%= javascript_include_tag "signup" %>

  <%= javascript_tag do %>
      defaultLocale = "<%= I18n.default_locale %>";
      locale = "<%= I18n.locale %>";
      dateNow = "<%= Time.now.strftime("%d/%m/%Y") %>"
  <% end %>

  <%= csrf_meta_tags %>
  <%= render 'layouts/shim' %>
</head>
<header>
  <%= render 'layouts/static_pages_header' %>
</header>
<body>

<div id="content">
  <%= yield %>
</div>
<div id="footer">
  <%= render 'layouts/static_pages_footer' %>
  <div class="container">
    <div class="row">
      <div class="col-md-12">
        <%= debug(params) if Rails.env.development? %>
      </div>
    </div>
  </div>
</div>
</body>
</html>