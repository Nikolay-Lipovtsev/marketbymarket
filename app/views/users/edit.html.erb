<% provide(:title, t("project.users.new.page_title")) %>
<% provide(:header_title, t("project.users.new.head_title")) %>

<div class="page-content inset">
  <div class="row">
    <div class="col-sm-12">
      <div class="panel panel-default panel-sm center-block">
        <div class="panel-body">
          <%= form_for @user, html: { class: "form-horizontal", role: "form" } do |user_fields| %>

              <div class="row">
                <div class="col-sm-12 margin-top-20 margin-bottom-15">
                  <%= image_tag("user_no_foto.jpg", alt: "Avatar", class: "img-circle avatar-lg center-block") %>
                </div>
              </div>
              <div class="row">
                <div class="col-sm-12 text-center">
                  <%= link_to root_path do %>
                      <i class="fa fa-pencil fa-fw"></i><small>&nbsp<%= t("project.controls.edit") %></small>
                  <% end %>
                </div>
              </div>
              <div class="col-sm-12 border-row margin-bottom-40 margin-top-40"></div>
              <div class="row">
                <div class="col-sm-9 col-sm-offset-3 margin-bottom-20 text-muted">
                  <h4 class="lead"><%= t("project.custom.lable.account") %></h4>
                </div>
              </div>
              <div class="form-group">
                <label for="email" class="col-sm-3 control-label"><%= t("project.custom.lable.email") %>*</label>
                <div class="col-sm-7">
                  <%= user_fields.text_field(   :email, class: "form-control",
                                                id: "email",
                                                placeholder: "Email",
                                                maxlength: "50"
                      ) %>
                </div>
              </div>
              <div class="form-group">
                <label for="password" class="col-sm-3 control-label"><%= t("project.custom.lable.password") %>*</label>
                <div class="col-sm-7">
                  <%= user_fields.text_field(   :password, class: "form-control",
                                                id: "password",
                                                placeholder: "Придумайте сложный, но запоминающийся пароль"
                      ) %>
                </div>
              </div>
              <div class="form-group">
                <label for="password-confirmation" class="col-sm-3 control-label">
                  <%= t("project.custom.lable.password_confirmation") %>*
                </label>
                <div class="col-sm-7">
                  <%= user_fields.text_field(   :password_confirmation, class: "form-control",
                                                id: "password-confirmation",
                                                placeholder: "Повторите пароль ещё раз"
                      ) %>
                </div>
              </div>
              <div class="form-group">
                <label for="inputPassword" class="col-sm-3 control-label">
                  <%= t("project.custom.lable.language") %>
                </label>
                <div class="col-sm-7">
                  <select class="form-control">
                    <option>Русский</option>
                    <option>English</option>
                  </select>
                </div>
              </div>
              <div class="col-sm-12 border-row margin-bottom-40 margin-top-40"></div>
              <div class="row">
                <div class="col-sm-9 col-sm-offset-3 margin-bottom-20 text-muted">
                  <h4 class="lead"><%= t("project.custom.lable.person") %></h4>
                </div>
              </div>

              <%= user_fields.fields_for :person do |person_fields| %>

                  <div class="form-group">
                    <label for="last-name" class="col-sm-3 control-label">
                      <%= t("project.custom.lable.last_name") %>*
                    </label>
                    <div class="col-sm-7">
                      <%= person_fields.text_field( :last_name,
                                                    class: "form-control",
                                                    id: "last-name",
                                                    placeholder: "#{t('project.custom.placeholder.last_name')}") %>
                    </div>
                  </div>
                  <div class="form-group">
                    <label for="first-name" class="col-sm-3 control-label">Имя*</label>
                    <div class="col-sm-7">
                    <%= person_fields.text_field( :first_name,
                                                  class: "form-control",
                                                  id: "first-name",
                                                  placeholder: "Имя") %>
                    </div>
                  </div>
                  <div class="form-group">
                    <label for="middle-name" class="col-sm-3 control-label">Отчество</label>
                    <div class="col-sm-7">
                    <%= person_fields.text_field( :middle_name,
                                                  class: "form-control",
                                                  id: "middle-name",
                                                  placeholder: "Отчество") %>
                    </div>
                  </div>
                  <div class="form-group">
                    <label for="sex" class="col-sm-3 control-label">Пол*</label>
                    <div class="col-sm-7">
                      <div class="radio">
                        <label>
                          <input type="radio" name="optionsRadios" id="optionsRadios1" value="option1" checked>
                          Мужчина
                        </label>
                      </div>
                      <div class="radio">
                        <label>
                          <input type="radio" name="optionsRadios" id="optionsRadios2" value="option2">
                          Женщина
                        </label>
                      </div>
                    </div>
                  </div>
                  <div class="form-group">
                    <label for="inputEmail3" class="col-sm-3 control-label">Дата рождения*</label>
                    <div class="col-sm-7">
                      <input type="email" class="form-control" id="inputEmail3" placeholder="Email">
                    </div>
                  </div>

              <% end %>

              <div class="col-sm-12 border-row margin-bottom-40 margin-top-40"></div>
              <div class="row">
                <div class="col-sm-9 col-sm-offset-3 margin-bottom-20 text-muted">
                  <h4 class="lead">Дополнительные адреса эл. почты</h4>
                </div>
              </div>
              <div class="form-group inline-group">
                <div class="col-sm-3 col-sm-offset-3">
                  <select class="form-control">
                    <option>Домашний</option>
                    <option>Рабочий</option>
                    <option>Личный</option>
                    <option>Другой</option>
                  </select>
                </div>
                <label for="inputKey" class="sr-only">Email</label>
                <div class="col-sm-4">
                  <input type="text" class="form-control" id="inputKey" placeholder="Email">
                </div>
                <div class="col-sm-2 control-label">
                  <%= link_to root_path, class: "pull-left" do %>
                      <i class="fa fa-trash-o fa-fw"></i><small>&nbsp<%= t("project.controls.delete") %></small>
                  <% end %>
                </div>
              </div>
              <div class="form-group">
                <div class="col-sm-7 col-sm-offset-3">
                  <%= link_to root_path do %>
                      <i class="fa fa-plus fa-fw"></i><small>&nbsp<%= t("project.controls.add") %></small>
                  <% end %>
                </div>
              </div>
              <div class="col-sm-12 border-row margin-bottom-40 margin-top-40"></div>
              <div class="form-group">
                <div class="col-sm-7 col-sm-offset-3">
                  <%= user_fields.submit t("project.controls.save"), class: "btn btn-large btn-primary" %>
                  <button type="button" class="btn btn-default" data-dismiss="modal"><%= t("project.controls.cancel") %></button>
                </div>
              </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>