<% provide(:title, t("sign_in.title")) %>
<% provide(:page_header_title, t('sign_in.page_header_title')) %>
<% provide(:panel_header_title, t('sign_in.panel_header_title')) %>
<% provide(:panel_footer_link, raw(t("sign_in.panel_footer_link",
                                     sign_up_link: link_to(t("sign_in.sign_up_link_text"), signup_path)))) %>

<%= form_for(:session, url: sessions_path, html: { role: "form" }) do |session_fields| %>

    <%= sign_page_input_tag("sign_in", session_fields, :email, "envelope", "email") %>
    <%= sign_page_input_tag("sign_in", session_fields, :password, "lock", "password") %>

    <div class="row">
      <div class="col-md-12">
        <div class="checkbox">
          <label>
            <%= fields_for :additional do |additional_fields| %>
                <%= additional_fields.check_box :remember_me %> <%= t('sign_in.remember_me_check_box') %>
            <% end %>
          </label>
        </div>
      </div>
    </div>

    <div class="row margin-top-20 margin-bottom-20">
      <div class="col-md-12">
        <%= session_fields.submit t('sign_in.sign_in_submit'), class: "btn btn-primary" %>
      </div>
    </div>

<% end %><!-- /form -->